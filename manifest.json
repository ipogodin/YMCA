{
  "manifest_version": 3,
  "name": "Youtube Mentor Comment Assistant",
  "version": "0.1",
  "description": "YMCA: Redefining the Art of Commenting on YouTubeâ€”One Thought at a Time!",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },"action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["tabs","activeTab", "scripting","storage"],
  "host_permissions": ["https://www.youtube.com/*"],
  "content_scripts": [{
    "matches": ["https://www.youtube.com/*", "http://www.youtube.com/*"],
    "js": ["content.js"]
  }]
}